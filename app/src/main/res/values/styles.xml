<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- No Title Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="YearBtn" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_width">380dp</item>
        <item name="android:layout_height">380dp</item>
        <item name="android:onClick">yearOnClick</item>
    </style>

    <style name="VideoBtn" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:onClick">VideoClick</item>
    </style>

    <style name="btn_vp" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:onClick">vp_Click</item>
    </style>

    <style name="btn_vp_left" parent="btn_vp">
        <item name="android:background">@drawable/left_click</item>
    </style>
    <style name="btn_vp_right" parent="btn_vp">
        <item name="android:background">@drawable/right_click</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="scrollView" parent="@android:style/Widget.ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="btn_back" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>
</resources>
